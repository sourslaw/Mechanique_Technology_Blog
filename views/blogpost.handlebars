<div class="dish-card">

  <div class="dish-card-header">
    <p>title: {{ post_title }}</p>
  </div>

  <div class="card-body">
    <p>blogpost id: <span>{{ id }}</span></p>
    <p>content: {{ content }}</p>
    <p>creator: {{ user_id }}</p>
    <p>created: {{ createdAt }}</p>

    <p>username: {{ user.username }}</p>

  </div>

</div>

<h3>comment form</h3>
<div>
  <form class="form new-comment-form">

    <label for="commentHole">comment:</label>
    <textarea id="commentHole" rows="2" cols="30"></textarea>

	<p>blogpost id</p>
	<p id="bpId">{{ id }}</p>
	<p>user id</p>
	<p>{{ user_id }}</p>
    <br/>

    <button type="submit" value="Submit">comment</button>

  </form>
</div>


{{!-- COMMENTS --}}
<h3>comments display 2</h3>

{{#if comments.length}}
  <div class="col-md-6 blogpost-list">

    <h3>recent comments:</h3>

    {{#each comments as |comment|}}

    <div class="row mb-2">
      <div class="col-md-8">
        <p>comment: {{ comment.content }}</p>
		<p>by (user id): {{ comment.user_id }}</p>
		<p>by (user id): {{ comment.createdAt }}</p>

		<p>by (username): {{ comment.user.id }}</p>
		<p>by (username): {{ comment.user.username }}</p>
      </div>
      <div class="col-md-4">
        {{#if loggedIn}} <button class="btn btn-sm btn-danger" data-id="{{ comment.id }}">DELETE</button> {{/if}}
      </div>
    </div>

    {{/each}}

  </div>
{{/if}}



