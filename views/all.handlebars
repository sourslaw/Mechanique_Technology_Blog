<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      Current posts
    </h2>
  </div>
  {{#each blogPosts as |post|}}
  <div class="dish col-md-4">
    <p>
      {{post.id}}
    </p>
    <a href="/blogpost/{{id}}">
      <p>
      {{post.post_title}}
      </p>
    </a>
	<p>
      {{post.content}}
	</p>
  </div>
  <div class="col-md-5">
    <p>
      person:
      {{post.user_id}}
    </p>
  </div>
  {{/each}}

