<div class="new-post-form">
  <h2>
    Update Dish
  </h2>
  <form class="new-post-form">
    <label for="post_title">
      post title:
    </label>
    <br />
    <textarea id="post_title" name="post_title" rows="2" cols="30">
      {{post_title}}
    </textarea>
    <br />
    <label for="content">
      content:
    </label>
    <br />
    <textarea id="content" name="content" rows="5" cols="30">
      {{content}}
    </textarea>
    <br />
    <label for="user_id">
      user id:
    </label>
    <br />
    <textarea id="user_id" name="user_id" rows="2" cols="30">
      {{user_id}}
    </textarea>
    <br />
    <br />
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>

<script src="./js/createblogpost.js"></script>