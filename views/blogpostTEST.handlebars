				</div>

				<div class="mb-3">
					<label for="content" class="form-label">post content</label>
					{{!-- <input type="text" class="form-control" id="content" placeholder="content . . ." rows="5"> --}}
					<textarea class="form-control" id="content" placeholder="{{ content }}" rows="10"></textarea>
				</div>

					<button type="submit" value="Submit" id="submitEdit">
						Submit update
					</button>
			</form>

		</div>
	</div>
</div>


